.site-meta {
  flex-grow: 1;
  text-align: $site-meta-text-align;

  +mobile() {
    text-align: center;
  }
}

.brand {
  border-bottom: none;
  color: var(--brand-color);
  display: inline-block;
  line-height: $font-size-title;
  padding: 0 40px;
  position: relative;

  &:hover {
    color: var(--brand-hover-color);
  }
}

@-webkit-keyframes shake{
	0% {
		-webkit-transform:translateX(9px) rotate(9deg);
    }
    20% {
        -webkit-transform:translateX(-7px) rotate(-7deg);
    }
    40% {
        -webkit-transform:translateX(5px) rotate(5deg);
    }
    60% {
        -webkit-transform:translateX(-3px) rotate(-3deg);
    }
    80% {
        -webkit-transform:translateX(1px) rotate(1deg);
    }
    100% {
        -webkit-transform:translateX(0) rotate(0);
    }
}

.site-title {
  display: inline-block;
  font-family: $font-family-logo;
  font-size: $font-size-title;
  font-weight: normal;
  line-height: 1.5;
  vertical-align: top;
  transition: color 0.5s ease-in-out;

  &:hover {
    animation: shake 0.5s ease-in-out 1;
    color: #ff6060;
  }
}

.site-subtitle {
  color: $subtitle-color;
  font-size: $font-size-subtitle;
  margin: 10px 0;
}

.use-motion {
  .brand {
    opacity: 0;
  }

  .site-title, .site-subtitle, .custom-logo-image {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
